<title>Lista de clientes</title>
<%- include('../../partials/headdashboard'); %>
<body>
<div class="container my-12 py-12 mx-auto px-4 md:px-6 lg:px-12">
  <input type="text" id="filtro" class="border rounded px-2 py-1 mb-4" placeholder="Buscar...">
  <a class="border-[3px] border-gray-600 bg-green-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors
  hover:border-gray-500 hover:bg-gray-500 hover:text-black" 
 href="registrousuarioadmin">
 Registrar cliente
 </a>


    <section class="mb-20 text-gray-800">  
      <div class="block rounded-lg shadow-lg bg-white">
        <div class="flex flex-col">
          <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full sm:px-6 lg:px-8">
              <div class="overflow-hidden">
                <table class="min-w-full mb-0">
                  <thead class="border-b bg-gray-50 rounded-t-lg text-left">
                    <tr>
                      <th scope="col" class="rounded-tl-lg text-sm font-medium px-6 py-4">Nombre</th>
                      <th scope="col" class="text-sm font-medium px-6 py-4">Cedula</th>
                      <th scope="col" class="text-sm font-medium px-6 py-4">Status</th>
                      <th scope="col" class="text-sm font-medium px-6 py-4">Rol</th>
                      <th scope="col" class="rounded-tr-lg text-sm font-medium px-6 py-4">Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="tablaDatos">
                    <% listaclientes.forEach((clientes) => { %>
                    <tr class="border-b">
                      <th scope="row" class="text-sm font-normal px-6 py-4 whitespace-nowrap text-left">
                        <div class="flex flex-row items-center">
                          <img
                            class="rounded-full w-12"
                            src="https://source.unsplash.com/300x201/?<%= clientes.nombre %>"
                            alt="Avatar"
                          />
                          <div class="ml-4">
                            <p class="mb-0.5 font-medium"><%= clientes.nombre %> <%= clientes.apellido %></p>
                            <p class="mb-0.5 text-gray-500">  </p>
                          </div>
                        </div>
                      </th>
                      <td class="text-sm font-normal px-6 py-4 whitespace-nowrap text-left">
                        <div class="flex flex-col">
                          <p class="mb-0.5"><%= clientes.cedula %></p>
                        </div>
                      </td>
                      <td class="align-middle text-sm font-normal px-6 py-4 whitespace-nowrap text-left">
                        <span class="text-xs py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-medium bg-green-200 text-green-600 rounded-full">Active</span>
                      </td>
                      <td class="align-middle text-gray-500 text-sm font-normal px-6 py-4 whitespace-nowrap text-left"><%= clientes.rol %></td>
                      <td class="align-middle text-right text-sm font-normal px-6 py-4 whitespace-nowrap ">
                        <button class="font-medium text-blue-600 hover:text-blue-700 focus:text-blue-700 active:text-blue-800 transition duration-300 ease-in-out">Editar</button>
                        <button class="font-medium text-blue-600 hover:text-blue-700 focus:text-blue-700 active:text-blue-800 transition duration-300 ease-in-out">Eliminar</button>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>
<script>
  const filtroInput = document.getElementById('filtro');
  const tablaDatos = document.getElementById('tablaDatos');

  filtroInput.addEventListener('keyup', () => {
    const filtro = filtroInput.value.toLowerCase();
    Array.from(tablaDatos.getElementsByTagName('tr')).forEach((fila) => {
      const textoFila = fila.textContent.toLowerCase();
      fila.style.display = textoFila.includes(filtro) ? '' : 'none';
    });
  });
</script>
</body>
</html>